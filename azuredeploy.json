{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appServiceName": {
            "minLength": 1,
            "type": "String"
        },
        "appServiceSkuName": {
            "defaultValue": "F1",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3",
                "P4"
            ],
            "type": "String",
            "metadata": {
                "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
            }
        },
        "webAppName": {
            "minLength": 1,
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2015-08-01",
            "name": "[parameters('appServiceName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "tags": {
                "displayName": "appService"
            },
            "sku": {
                "name": "[parameters('appServiceSkuName')]"
            },
            "properties": {
                "name": "[parameters('appServiceName')]",
                "numberOfWorkers": 1
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2015-08-01",
            "name": "[parameters('webAppName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('appServiceName'))]"
            ],
            "properties": {
                "name": "[parameters('webAppName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServiceName'))]"
            }
        },
        {
            "type": "Microsoft.Web/sites/extensions",
            "apiVersion": "2018-02-01",
            "name": "[concat(parameters('webAppName'),'/MsDeploy')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites',parameters('webAppName'))]"
            ],
            "tags": {},
            "properties": {
                "addOnPackages": [
                    {
                        "packageUri": "https://kspwebdeployment.blob.core.windows.net/webfile/AzureIOTPortal.zip?sp=r&st=2019-09-04T06:33:23Z&se=2019-09-05T14:33:23Z&spr=https&sv=2018-03-28&sig=Ffygo0ngVCuT8xrT5sZTcmuX%2BcZcHfNXh4dZ1mzH7fQ%3D&sr=b"
                    }
                ]
            }
        }
    ],
    "outputs": {}
}